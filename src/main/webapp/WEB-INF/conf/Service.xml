        </property>
    </bean>
    
    <bean id="roomgalleryservice" class="it.adsolut.bbitaly.service.RoomGalleryServiceImpl">
        <property name="roomGalleryDao">
            <ref bean="roomgallerydao"/>
        </property>
        <property name="photoDao">
            <ref bean="photodao"/>
        </property>
        <property name="roomService">
            <ref bean="roomservice"/>
        </property>
        <property name="uploader">
            <ref bean="uploader"/>
        </property>
    </bean>
    
    <bean id="bookservice" class="it.adsolut.bbitaly.service.BookServiceImpl">
        <property name="bookDao">
            <ref bean="bookdao" />
        </property>
        <property name="bookDetailDao">
            <ref bean="bookdetaildao" />
        </property>
        <property name="bbService">
            <ref bean="bbservice"/>
        </property>
        <property name="roomService">
            <ref bean="roomservice"/>
        </property>
        <property name="userService">
            <ref bean="userservice"/>
        </property>
    </bean>
</beans>